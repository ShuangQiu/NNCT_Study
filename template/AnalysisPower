# use Primetime
# 電力を求める
###############
# $name: circuit name
# $nangate_db: nangate file
# $vg: nangate file

#set topModule $name
set link_path $nangate_db

set power_enable_analysis true
set power_analysis_mode time_based
set target_library $nangate_db

read_db $nangate_db
read_verilog $vg
current_design $name
link
read_vcd $vcd -time {0 301} -strip_path ${name}_test/dut

check_power
update_power
report_power

report_power_analysis_options
exit
